.banner image {
	width: 100%;
}

.big-title {
	display: block;
	margin-top: 10px;
	padding:10px 15px;
	font-size: 16px;
	color: #46a68f;
	background-color: #fff;
}

.item {
	margin-bottom: 10px;
	padding: 0px 0px 10px;
	background-color: #fff;
}
.item .title,
.item .content {
	display: block;
	padding: 0px 15px;
}
.item .title {
	margin: 10px 0px 5px;
	font-size: 14px;
	color: #4f4f4f;
	font-weight: 600;
}
.item .content {
    font-size: 12px;
    color: #5c5c5c;
}
.item image {
	display: block;
	width: 100%;
}